<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#B2EBF2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#B2EBF2"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10sp"
        tools:context=".WordDetailsFragment">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_favorite"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="30sp"
            android:textSize="20sp"
            app:icon="@drawable/ic_baseline_star_24"
            app:iconGravity="end"
            app:iconSize="50sp"
            app:iconTint="#777777" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="5sp"
            android:padding="10sp"
            android:text="لغت :"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textView_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:background="@drawable/round_corner_shape2"
            android:padding="20sp"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5sp"
            android:padding="10sp"
            android:text="معنی :"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textView_meaning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:background="@drawable/round_corner_shape2"
            android:padding="20sp"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5sp"
            android:padding="10sp"
            android:text="مترادف :"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textView_synonyms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:background="@drawable/round_corner_shape2"
            android:padding="20sp"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5sp"
            android:padding="10sp"
            android:text="مثال :"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textView_example"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"

            android:background="@drawable/round_corner_shape2"
            android:padding="20sp"
            android:textColor="#000000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_wikipedia"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_margin="10sp"
            android:layout_weight="1"
            android:gravity="start"
            android:text="ویکی پدیا"
            android:textSize="24sp"
            app:cornerRadius="30sp"
            app:icon="@drawable/ic_baseline_language_24"
            app:iconGravity="end" />

        <WebView
            android:id="@+id/webView_wikipedia"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:padding="5sp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_delete"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:outlineAmbientShadowColor="@color/purple_700"
                android:outlineSpotShadowColor="@color/purple_700"
                android:shadowColor="@color/purple_700"
                android:text="حذف"
                android:textSize="24sp"
                android:textStyle="bold"
                app:cornerRadius="30sp" />

            <Button
                android:id="@+id/button_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:text="ویرایش"
                android:textSize="24sp"
                android:textStyle="bold"
                app:cornerRadius="30sp" />

        </LinearLayout>


    </LinearLayout>
</ScrollView>